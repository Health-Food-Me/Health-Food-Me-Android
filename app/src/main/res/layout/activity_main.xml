<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">

        <fragment
            android:id="@+id/fragment_naver_map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ib_hamburger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_white_radius_14"
                android:padding="20dp"
                android:src="@drawable/rp_green_hambuger"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/rectangle_white_radius_14"
                android:drawableEnd="@drawable/ic_search"
                android:drawablePadding="124dp"
                android:fontFamily="@font/notosanskr_r"
                android:hint="@string/main_search"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="15dp"
                android:textColor="@color/gray_400"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ib_hamburger"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/layout_search">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cg_food_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샐러드"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="포케"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샌드위치"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="샤브샤브"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보쌈"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고깃집"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="덮밥"
                    app:chipIcon="@drawable/ic_sandwitch" />

                <com.google.android.material.chip.Chip
                    style="@style/Base.Widget.MaterialComponents.Chip.Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="키토김밥"
                    app:chipIcon="@drawable/ic_sandwitch" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_bookmark"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toTopOf="@id/fab_location"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="39dp"
            android:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_currentposition" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>