<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthFoodMe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.Style</item>
    </style>

    <style name="Button.Basic.Style" parent="">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Button.Navigation.Style" parent="Button.Basic.Style">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">48dp</item>
    </style>

    <style name="TextView.Hashtag.Style" parent="">
        <item name="android:layout_height">22dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/rectangle_border_radius_10</item>
        <item name="android:backgroundTint">#FFEAEA</item>
        <item name="android:textAppearance">@style/TextView.Hashtag.TextAppearance</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="TextView.Hashtag.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_m</item>
        <item name="android:textColor">@color/red_500</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TabItem.RestaurantTab.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_b</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TabItem.MenuTab.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_m</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Nutrient.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_b</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Setting.TextAppearance_14" parent="">
        <item name="android:textColor">@color/gray_550</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Setting.TextAppearance_16" parent="">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.OpeningTime.Appearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_m</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextView.Drawer.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_r</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="TextView.Map.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_r</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextView.MapButton.Style" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextView.Review.Title.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_b</item>
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="TextView.Review.Description.TextAppearance" parent="">
        <item name="android:fontFamily">@font/notosanskr_r</item>
        <item name="android:textColor">@color/gray_550</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="CircleImageView.Radius.8.Style" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <style name="CircleImageView.Radius.5.Style" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>

    <style name="Base.Widget.MaterialComponents.Chip.Style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/notosanskr_r</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <item name="android:textSize">14sp</item>
        <item name="iconStartPadding">8dp</item>
        <item name="elevation">2dp</item>
        <item name="textEndPadding">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="chipIconVisible">true</item>
    </style>

    <style name="TextView.Review.Writing.Hashtag.Style" parent="">
        <item name="android:fontFamily">@font/notosanskr_m</item>
        <item name="android:textColor">@color/selector_tag_text_color</item>
        <item name="android:background">@drawable/selector_tag_background</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="TextView.Hashtag.Basic.Style" parent="">
        <item name="android:textColor">@color/red_500</item>
        <item name="android:background">@drawable/rectangle_boarder_red_radius_14</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
    </style>

    <style name="TextView.Blog.Review.Hashtag.Style" parent="TextView.Hashtag.Basic.Style">
        <item name="android:fontFamily">@font/notosanskr_r</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="TextView.Restaurant.Summary.Hashtag.Style" parent="TextView.Hashtag.Basic.Style">
        <item name="android:fontFamily">@font/notosanskr_m</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Corner_14" parent="">
        <item name="cornerSize">14dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius8" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="BottomSheetDialog.Style" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal.Style</item>
    </style>

    <style name="Modal.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_white_top_radius_24</item>
    </style>

    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>

        <!-- Dim 처리 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <!-- Dialog 가 센터에 나오도록 하자. -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RatingBar.HelFooMe.Style" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_rating_bar</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.FullButton.Style" parent="Button.Basic.Style">
        <item name="android:layout_marginHorizontal">@dimen/size_spacing_20</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:background">@drawable/rectangle_transparent_radius_20</item>
        <item name="android:backgroundTint">@color/red_500</item>
        <item name="android:fontFamily">@font/notosanskr_b</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>